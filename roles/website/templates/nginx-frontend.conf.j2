server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;
    server_name {{ website_frontend_domain }}

    include /etc/nginx/default.d/ssl.conf;
    ssl_certificate /var/lib/dehydrated/certs/{{ website_frontend_domain }}/fullchain.pem;
    ssl_certificate_key /var/lib/dehydrated/certs/{{ website_frontend_domain }}/privkey.pem;
    ssl_trusted_certificate /var/lib/dehydrated/certs/{{ website_frontend_domain }}/chain.pem;

    location / {
        proxy_pass http://localhost:8002;
    }
}
